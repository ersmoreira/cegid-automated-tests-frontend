{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "importHelpers": true,
  },
  "exclude": ["node_modules", "dist"]
}

